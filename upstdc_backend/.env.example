# Backend environment configuration

# Server
PORT=3001
HOST=0.0.0.0
NODE_ENV=development

# CORS
# Set to the frontend origin (no trailing slash). Example: http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# Database (PostgreSQL)
# Use the database container/host and port 5001 as per project scripts
DATABASE_URL=postgresql://appuser:dbuser123@localhost:5001/myapp

# JWT
JWT_ACCESS_SECRET=change_this_access_secret
JWT_REFRESH_SECRET=change_this_refresh_secret
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Uploads
UPLOAD_DIR=uploads

# Optional
POSTGIS_ENABLED=false
